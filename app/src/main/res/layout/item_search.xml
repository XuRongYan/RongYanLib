<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/item_search_img"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_weight="7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_search_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:lines="1"
            android:text="欢乐颂"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/item_search_type"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:lines="1"
            android:ellipsize="end"
            android:text="电视剧-2016-都市"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/item_search_whole"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:lines="1"
            android:text="42集全"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/item_search_cast"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:text="主演：刘涛/蒋欣/王子文/杨紫"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>
</LinearLayout>