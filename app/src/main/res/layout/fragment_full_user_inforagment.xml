<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    tools:context="com.rongyan.aikanvideo.fulluserinfo.FullUserInfoFragment">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/full_info_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:hint="昵称">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/full_info_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="email">

        <EditText
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:textColor="@color/black" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/full_info_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="年龄">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"

            android:textColor="@color/black" />
    </android.support.design.widget.TextInputLayout>

    <RadioGroup
        android:id="@+id/full_info_radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/full_info_male"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="男"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/full_info_female"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="女"
            android:textSize="18sp" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/full_info_career"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:textColor="@color/black"
            android:hint="职业" />

        <ImageView
            android:id="@+id/full_info_show_dialog"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:src="@drawable/ic_keyboard_arrow_down_white_24dp" />


    </LinearLayout>

    <Button
        android:id="@+id/full_info_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:background="@drawable/btn_corner"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:textSize="18sp" />


</LinearLayout>
